<div class="container">
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <h1>Create a new Booking for "<%= @buoy.title %></h1>

      <%= simple_form_for [@buoy, @booking] do |f| %>
        <%= f.input :start_date %>
        <%= f.input :end_date %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>

      <%= link_to 'Back to buoy', buoy_path(@buoy) %>

    </div>
  </div>
</div>
