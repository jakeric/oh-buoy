<div class="wrapper">

  <div class="container container-boxes">
        <div class="row">
          <div class="col-xs-12 col-md-6 left-form-container">
            <h2> Update: <%=@buoy.title %></h2>

            <div class="row">
              <div class="col-md-12">
                <%= simple_form_for @buoy do |f| %>
                <%= f.input :title, label: 'Title' %>
                <%= f.input :description, label: 'Description' %>
              </div>
              <div class="col-md-6 col-xs-12">
                <%= f.input :category, as: :select, collection: @array %>
              </div>

              <div class="col-md-6 col-xs-12">
                <%= f.input :age, label: 'How old is your buoy?' %>
              </div>

              <div class="col-md-6 col-xs-12">
                <%= f.input :capacity, label: 'How many people fit on your buoy?' %>
              </div>

              <div class="col-md-6 col-xs-12">
                <%= f.input :price_per_day, label: 'What does your buoy cost for one day?' %>
              </div>

              <div class="col-md-12 col-xs-12">
                <%= f.input :street, label: 'Where does your buoy live?' %>
              </div>

              <div class="col-md-12 padding-bottom-left">
                <div class="photo-input">
                  <%= f.input :photo %>
                  <%= f.input :photo_cache, as: :hidden %>
                  <%= f.button :submit %>
                </div>
                      <%= link_to 'Back to buoys', buoys_path %>

              </div>
              <% end %>
            </div>
          </div>

          <div class="col-xs-12 col-md-6 image-padding-delete">
             <div class="right-form-container" style="background-image: url('<%= @buoy.photo_url%>');"></div>
          </div>
      </div>

  </div>
</div>


